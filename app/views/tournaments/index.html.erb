<h1>All Tournaments</h1>

<% @tournaments.each do |t| %>
	<div class="row">
		<p>
			<%= link_to t do %>
					<% if t.soft_delete %>
						<h3><span style="color: red">DELETED:  <%= t.name %></span></h3>
					<% else %>
						<h3><%= t.name %></h3>
					<% end %>
				<%= link_to "Delete", tournament_path(t.id), method: 'delete' %>
			<% end %>
		</p>
		<p><%= t.description %></p>
		<p><%= t.primary_city %>, <%= t.primary_state %></p>
		<p><%= t.start_date %> - <%= t.end_date %></p>
	</div>
<% end %>